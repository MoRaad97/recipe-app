<section >
  <div class="recipe-details">
    <h1 class="text-center fs-1 text-capitalize "><%= @recipe.name %></h1>
    <p>Preparation time: <%= @recipe.preparation_time %></p>
    <p>Cooking time: <%= @recipe.cooking_time %></p>
    <p><%= @recipe.description %></p>
    <% if user_signed_in? && @recipe.user === current_user%>
    <button class="generate-btn">Generate a shopping list</button>
    <button class="add-ingredient-btn">Add ingredient</button>
    <% else %>
    <p>By: <%= @recipe.user.name %></p>
    <% end %>
  </div>
  <div class="all-recipes">
    <%= link_to("All Recipes", recipes_path) %>
  </div>
  
</section>
